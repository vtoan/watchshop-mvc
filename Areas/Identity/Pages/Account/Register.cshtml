@page
@model RegisterModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<div class="d-flex justify-content-center">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width: 350px;">
        <h4>Create a new account</h4>
        <hr class="mb-3" />
        <div class="mb-3">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg mb-3" style="width: 100%">Register</button>
        <p><a asp-page="./Login">Trở lại trang đăng nhập</a>
        <div asp-validation-summary="All" class="red"></div>
    </form>
</div>


