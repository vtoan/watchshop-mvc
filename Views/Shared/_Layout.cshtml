@{
    var layoutData = LayoutData.Instance;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="language" content="VN">
    <meta name="resource-type" content="document">
    <!--SEO-->
    <title>@layoutData.NameStore - @layoutData.Title</title>
    <meta name="description" content="@layoutData.Description">
    <meta name="copyright" content="@layoutData.NameStore" />
    <meta name="author" content="@layoutData.NameStore" />
    <!--OPEN GRAPH-->
    <meta property="og:title" content="@layoutData.Title" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@layoutData.URL" />
    <meta property="og:image" content="@layoutData.Image" />
    <meta property="og:description" content="@layoutData.Description" />
    <meta property="og:locale" content="vi_VN" />
    <!--CDN REFERENCE-->
    <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;1,100;1,300;1,400&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css" />
    <link rel="stylesheet" href="~/libs/line-awesome-1.3.0/1.3.0/css/line-awesome.min.css" />
    <link rel="stylesheet" href="~/libs/bootstrap/dist/css/bootstrap-grid.min.css" />
    <!--CSS-->
    <link rel="stylesheet" href="~/css/main.css" />
    @RenderSection("css", false)
</head>

<body>
    @* <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v8.0"
        nonce="49PHUsd8"></script> *@
    <cache enabled="true">
            <partial name="_PartialHeader"></partial>
    </cache>
    <main>@RenderBody()</main>
    <cache enabled="true">
            <partial name="_PartialFooter"></partial>
    </cache>
    <!--SCRIPTS-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="~/js/element-ui.js"></script>
    <script src="~/js/order.js"></script>
    <script src="~/js/main.js"></script>
    @* <script src="~/js/cookie.js"></script> *@
    @RenderSection("scripts", false)
</body>

</html>
