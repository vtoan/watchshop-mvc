        <div class="col-3 col-lg-2 d-lg-block">
            <div class="d-flex justify-content-end">
                <a class="nav-item nav-icon d-none d-lg-block" title="Search Icon">
                    <i id="search" class="icon las la-search"></i>
                </a>
                <a class="nav-item nav-icon" asp-action="Index" asp-controller="Cart" title="Cart Icon">
                    <div class="cart-shopping">
                        <i class="icon las la-shopping-cart"></i>
                        <span id="cart-items" class="white bg-red">1</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!--Side Menu mobile-->
    <div class="nav-mobile d-lg-none">
        <nav  class="nav-container flex-column bg-white">
            <a class="nav-item-sm" asp-action="Index" asp-controller="Home" title="Trang chủ">trang chủ</a>
            <a id="search-sm"  class="nav-item-sm" href="#!" title="Tìm kiếm">tìm kiếm</a>
            <a class="nav-item-sm" asp-action="Discount" asp-controller="Product" title="Khuyến mãi">khuyến mãi</a>
            <a class="nav-item-sm" asp-action="Men" asp-controller="Product" title="Đồng hồ nam">nam</a>
            <a class="nav-item-sm" asp-action="Women" asp-controller="Product" title="Đồng hồ nữ">nữ</a>
