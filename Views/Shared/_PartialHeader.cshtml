        <div class="col-3 d-lg-none">
            <a id="menu" class="nav-item" href="#!" title="Hamberger Icon"><i class="icon las la-bars"></i></a>
        </div>
        <!--Title-->
        <div class="col-6 col-lg-2 text-center text-lg-left">
            <h1 class="py-3 text-3"><a asp-action="Index" asp-controller="Home" title="Trang chủ">hommer house</a></h1>
        </div>
        <!--Nav Desktop-->
        <div class="col-6 d-none col-lg-8 d-lg-block">
            <nav class="nav-container">
                <a class="nav-item" asp-action="Discount" asp-controller="Product" title="Khuyến mãi" >khuyến mãi</a>
                <a class="nav-item" asp-action="Men" asp-controller="Product" title="Đồng hồ nam" >nam</a>
